[colors]
bg = #1E1E24 
font = #f9f7f7 
font-alt = #020100
tangerine = #FB9F89
web = #C4AF9A
sheen = #81AE9D 
munsell = #21A179
yellow = #FFC857
blue = #255F85
indigo = #2b4162
sienna = #481D24
cardinal = #c5283D

[bar/main]
enable-ipc = true
override-webirect = false

bottom = false
width = 100%
height = 40 ;px

background = ${colors.bg}
foreground = ${colors.font}

line-size = 7
;line-color = ${colors.sheen} 

;List of fonts
font-0 = Iosevka:style=Bold:size=14;2 

wm-restack = i3
tray-position = center

module-margin-left = 0
module-margin-right = 0
padding-left = 1
padding-right = 0

modules-left = workspaces 
modules-center = date 
modules-right = filesystem memory cpu temperature sound kernel-version updates-pacman

Date correction
[module/date]
type = internal/date

time = %H:%M
date = %A, %B %d
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-underline = ${colors.munsell}
format-background = ${colors.munsell}
interval = 20
format-padding= 3

label = %date%, %time%
label-font = 1
label-foreground = ${colors.font}

[module/workspaces]
type = internal/i3

label-focused-background = ${colors.cardinal} 
label-focused-foreground = ${colors.font} 

label-unfocused-background = ${colors.sienna} 
label-unfocused-foreground = ${colors.font} 

label-focused-padding-right = 2
label-focused-padding-left = 1

label-unfocused-padding-left = 1
label-unfocused-padding-right = 2

pin-workspaces = true
strip-wsnumbers = true
index-sort = true
format = <label-state> 

;Sound
[module/sound]
type = internal/pulseaudio

format-volume =<label-volume>

label-volume = VOL: %percentage%
label-volume-underline = ${colors.munsell}
label-volume-background = ${colors.munsell}
label-volume-padding = 3
label-volume-font = 1


label-muted = VOL: (%percentage%)
label-muted-font = 1
label-muted-foreground = ${colors.font}

[module/kernel-version]
type = custom/script
exec = uname -r
interval = 1024
format-background = ${colors.blue} 
format-prefix = "KERNEL: "
format-padding = 3

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

spacing = 2
label-mounted = USED: %used%
label-mounted-background = ${colors.yellow}
label-mounted-padding = 3


[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>

label =CPU: %percentage% %
label-font = 1
label-background = ${colors.web}
label-padding = 3

[module/temperature]
type = internal/temperature
interval = 2
hwmon-path = /sys/devices/platform/nct6775.2592/hwmon/hwmon2/temp2_input
format = <label>
label = TEMP: %temperature-c%
label-font = 1
format-background = ${colors.sheen}
format-padding = 3

[module/memory]
type = internal/memory
interval = 3
format = <label>

format-prefix-foreground = ${colors.font}

label = RAM: %gb_used%
label-background = ${colors.tangerine}
label-padding = 3

[module/updates-pacman]
type = custom/script
exec = ~/.config/polybar/updates-pacman.sh
interval = 600
format-prefix = "UPDATES: "
format-background = ${colors.indigo} 
format-padding = 3
